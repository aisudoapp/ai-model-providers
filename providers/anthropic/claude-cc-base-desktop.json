			"api_key": {
				"title": "API KEY",
				"widget": "password",
				"value": ""
			},
			"system": {
				"title": "System Instruction",
				"widget": "text",
				"value": "",
				"copy_to": "body"
			},
			"max_history": {
				"title": "Max History",
				"widget": "slider",
				"value": 8,
				"min_value": 2,
				"max_value": 64,
				"step": 1,
				"type": "int"
			},
			"max_tokens": {
				"title": "Max Tokens",
				"widget": "slider",
				"value": 2048,
				"min_value": 64,
				"max_value": 8000,
				"step": 64,
				"type": "int",
				"copy_to": "body"
			},
			"temperature": {
				"title": "Temperature",
				"widget": "slider",
				"value": 1.0,
				"min_value": 0.0,
				"max_value": 1,
				"step": 0.1,
				"type": "double",
				"copy_to": "body"
			},
			"prompt": {
				"value": "hello"
			}
		},
		"request": {
			"format": "anthropic",
			"endpoint": "https://api.anthropic.com/v1/messages",
			"headers": {
				"x-api-key": "<< helper.api_key >>",
				"anthropic-version": "2023-06-01",
				"Content-Type": "application/json"
			},
			"body": {
				"stream": true
			}
		},
		"response": {
			"result_path": "delta.text"
		}
	}
}